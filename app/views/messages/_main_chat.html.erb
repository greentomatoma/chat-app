<div class="chat-top">
  <div class="left-top">
    <div class="title">
      チャットタイトル
    </div>
  </div>
  <div class="right-top">
    <div class="chat-end">
      <a href="#"> チャットを終了する </a>
    </div>
  </div>
</div>

<div class="messages">

  <div class="message">
    <div class="upper-message">
      <div class="user-name"> Tom </div>
      <div class="message-date"> 2021/3/31(Wed) 12:43:30 </div>
    </div>
    <div class="lower-message">
      <div class="message-text"> おはよう </div>
    </div>
  </div>

  <div class="message">
    <div class="upper-message">
      <div class="user-name"> Mike </div>
      <div class="message-date"> 2021/3/31(Wed) 13:43:30 </div>
    </div>
    <div class="lower-message">
      <div class="message-text"> こんにちは </div>
    </div>
  </div>

</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message'%>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>